<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Books</title>
    <link rel="stylesheet" href="/css/books.css">
</head>
<body>
    <div class="header">
        <img src="/images/hamburger-menu.png" alt="">
        <h1>LOGO</h1>
        <img src="/images/hamburger-menu.png" alt="">
    </div>

    <div class="banner">
        <h2>Find Your Next Book</h2>
        <form action="/books" method="get" class="search-bar">
            <input type="text" name="searchInput">
            <button>Search</button>

            <div class="filter-section">
                <p>filter By genre:</p>
                <button class="filter-tag">Classic</button>
                <button class="filter-tag">Romance</button>
                <button class="filter-tag">Science Fiction</button>
            </div>
        </form>
        <div class="search-section">
            
        </div>
    </div>

    <div class="books-grid">
        <% books.forEach(book => { %>
            <a href="/books/<%= book.id %>" class="book">
                <div class="book-cover">
                    <img src="https://m.media-amazon.com/images/I/81TLiZrasVL._SL1500_.jpg" alt="">
                </div>
                <h2><%= book.book_name %></h2>
                <p>by: <%= book.author_name %> </p>
            </a>
        <% }) %>
    </div>
</body>
</html>